<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/Ip1"
        android:layout_width="76dp"
        android:layout_height="0dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:hint="192"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/Ip2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Ip4"
        android:layout_width="76dp"
        android:layout_height="0dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:hint="12"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/Ip3"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Ip3"
        android:layout_width="76dp"
        android:layout_height="0dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:hint="0"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/Ip4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/Ip2"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Ip2"
        android:layout_width="76dp"
        android:layout_height="0dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:hint="168"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/Ip3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/Ip1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPing"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="82dp"
        android:layout_marginEnd="100dp"
        android:text="Ping"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Ip3" />

    <Button
        android:id="@+id/btnSearchHost"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:text="Buscar  Host"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPing" />
</androidx.constraintlayout.widget.ConstraintLayout>